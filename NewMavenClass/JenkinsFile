pipeline{
  agent any 
    tools {
      maven 'Maven'
      jdk 'jdk8'
      }
     
    
  
  stages {
  stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }
        stage('path') {
        steps{
             sh 'dir'
        }
        }
    stage('Build'){
      steps{
       
       sh 'mvn -f NewMavenClass/pom.xml clean install'
      }
       post {
                success {
                    sh 'mvn -f NewMavenClass/pom.xml test' 
                }
            }
     }
   
  }
}
